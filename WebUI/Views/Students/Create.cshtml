@model ConsoleAppProject.App03.Student
@using ConsoleAppProject.App03;

@{
    
    ViewData["Title"] = "Create";
}

<div class="jumbotron text-monospace">
    <h1 class="text-center">Create New Student</h1>
    <hr />
    <div class="row">
        <div class="col-md-6" style="margin-top: 10%">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mark" class="control-label"></label>
                    <input asp-for="Mark" class="form-control" />
                    <span asp-validation-for="Mark" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                        <label asp-for="Grade" class="control-label"></label>
                        <select asp-for="Grade" asp-items="Html.GetEnumSelectList<Grades>()" class="form-control"></select>
                    </div>*@
                <div class="form-group row">
                    <div class="col">
                        <input type="submit" value="Create" class="btn btn-primary float-left" />
                    </div>
                    <div class="col">
                        <a class="btn btn-success float-right" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col">
            <h2 class="text-center">New Students</h2>
            <hr />
            <p style="margin-left:5%; margin-right: 5%; margin-top: 5%;">
                When you click 'create' a server validation will be called. This 
                will make sure that the database does not recieve wrong values. <br />
                If the validation proccess is passed, a new object of the class Student will be created.
                The fields of this object will be added to the database as a new entry 
                with an auto-incremented Primary Key ID that is invisible to the user. <br />
                The Grade value is calculated from the input mark. The proces imitates a real 
                system where anything under 40% is considered a Fail and anything over 70% is a First. <br />
                The mark must have a value between 0 and 100 and is validated both front end 
                and server side.<br />
            </p>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
